{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["es2020", "DOM"],
		"moduleResolution": "node",
		"module": "es2020",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2020",
		"baseUrl": ".",
		"paths": {
			"$components": ["src/components"],
			"$components/*": ["src/components/*"],
			"$public": ["src/public"],
			"$public/*": ["src/public/*"],
			"$styles": ["src/styles"],
			"$styles/*": ["src/styles/*"]
		}
	},
	"exclude": ["src/generated"]
}
